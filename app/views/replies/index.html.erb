<h1>Listing replies</h1>

<table>
  <tr>
    <th>Topic</th>
    <th>Content</th>
    <th>User</th>
    <th>Is valid</th>
    <th>Top</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @replies.each do |reply| %>
  <tr>
    <td><%= reply.topic_id %></td>
    <td><%= reply.content %></td>
    <td><%= reply.user_id %></td>
    <td><%= reply.is_valid %></td>
    <td><%= reply.top %></td>
    <td><%= link_to 'Show', reply %></td>
    <td><%= link_to 'Edit', edit_reply_path(reply) %></td>
    <td><%= link_to 'Destroy', reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

