<div class="col-md-12 pad12 col-md-re">
        <div class="panel-content-redo marginbtm25">
          <table class="respon-table" border="0" cellpadding="0" cellspacing="0" width="100%">
            <tbody><tr>
              <th class="col-xs-12 col-sm-6 col-md-6 cate-list">标题</th>
              <th class="col-xs-12 col-sm-2 col-md-2 hidden-xs cate-list">回复/阅读</th>
              <th class="col-xs-12 col-sm-2 col-md-2 hidden-xs cate-list">作者</th>
              <th class="col-xs-12 col-sm-2 col-md-2 hidden-xs cate-list">最后回复</th>
            </tr>
            <% if @topics and @topics.size>0 %>
                <% @topics.each do |topic| %>
                <tr name="show_more_topics" forum_id="145" top="1">
                  <td class="col-xs-12 col-sm-6 col-md-6">
                    <a href="/topics/<%=topic.id %>" target="_blank"><%=topic.title %></a>
                  </td>
                  <td class="col-xs-12 col-sm-2 col-md-2 hidden-xs"><%=topic.views %>/<%=topic.replies %></td>
                  <td class="col-xs-12 col-sm-2 col-md-2 hidden-xs table-timecol">
                    <a href="/users/<%=topic.user_id %>" target="_blank"><%=topic.user.name %></a>
                    <div><%=topic.created_at %></div>
                  </td>
                  <td class="col-xs-12 col-sm-2 col-md-2 hidden-xs table-timecol">
                    <a href="/users/<%=topic.user_id %>" target="_blank"><%=topic.user.name %></a>
                    <div><%=topic.updated_at %></div>
                  </td>
                </tr>
                <% end %>
            <% end %>
                
          </tbody></table>
        </div>
  </div>

<%= link_to 'New Topic', new_topic_path %> 