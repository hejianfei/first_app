<% provide(:title, '帖子列表') %>
<div class="row">
  <div class="col-*-12">
    <button type="button" class="btn btn-success" onclick="javascript:window.open('/topics/new');">发帖</button>
  </div>
</div>
<div class="col-md-10 pad10 col-md-re">
  <div class="panel-content-redo marginbtm25">
    <table class="table table-hover">
    <!-- <table class="respon-table" border="0" cellpadding="0" cellspacing="0" width="100%"> -->
      <tbody><tr>
        <th class="col-xs-12 col-sm-6 col-md-6 cate-list">标题</th>
        <th class="col-xs-12 col-sm-2 col-md-2 hidden-xs cate-list">回复/阅读</th>
        <th class="col-xs-12 col-sm-2 col-md-2 hidden-xs cate-list">作者</th>
        <th class="col-xs-12 col-sm-2 col-md-2 hidden-xs cate-list">最后回复</th>
      </tr>
      <% if @topics and @topics.size>0 %>
          <% @topics.each do |topic| %>
          <tr name="show_more_topics" forum_id="145" top="1">
            <td class="col-xs-12 col-sm-6 col-md-6">
              <a href="/topics/<%=topic.id %>" target="_blank"><%=topic.title %></a>
            </td>
            <td class="col-xs-12 col-sm-2 col-md-2 hidden-xs"><%=topic.reply_count %>/<%=topic.views %></td>
            <td class="col-xs-12 col-sm-2 col-md-2 hidden-xs table-timecol">
              <a href="/users/<%=topic.user_id %>" target="_blank"><%=topic.user.name %></a>
              <div><%=topic.created_at.strftime("%F") %></div>
            </td>
            <td class="col-xs-12 col-sm-2 col-md-2 hidden-xs table-timecol">
              <a href="/users/<%=topic.user_id %>" target="_blank"><%=topic.user.name %></a>
              <div><%=topic.updated_at.strftime("%F") %></div>
            </td>
          </tr>
          <% end %>
      <% end %>
      <%= will_paginate @topics %>
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-2 pad2 col-md-re">
  <div class="panel panel-default">
  <div class="panel-heading">新注册的老师</div>
  <div class="panel-body">
    <%if @forecasters.size > 0 
        @forecasters.each do |forecaster|
    %>
        <%=forecaster.name %>
    <%  end 
      end %>
  </div>
</div>
</div>