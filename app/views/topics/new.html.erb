<% provide(:title, '新建帖子') %>
<%= link_to 'Back', topics_path %>

<%= form_for @topic,:html => {:role => 'form'} do |f| %>
  <div class="form-group">
    <label for="topic_title" class="col-sm-2 control-label">帖子标题</label>
    <div class="col-sm-10">
      <%= f.text_field :title, :class=>"form-control", :placeholder=>"输入2~50个字符" %>
    </div>
  </div>
  <div class="form-group">
    <label for="topic_content" class="col-sm-2 control-label">帖子内容</label>
    <div class="col-sm-10">
      <div class="field" > 
        <%= f.cktext_area :content,  :toolbar => 'Full', :width => 900, :height => 400 %>  
      </div>
    </div>
  </div>
  <!-- <div class="form-group">
    <label for="topic_category_id" class="col-sm-2 control-label">栏目</label>
    <div class="col-sm-10">
      </%= f.text_field :category_id, :class=>"form-control" %>
    </div>
  </div> -->
  <div class="form-group">
  	<div class="col-sm-12">
      <button type="submit" class="btn btn-default">创建帖子</button>
    </div>
  </div>
<% end %>
